<div class="container">
  <div class="row">
    <% @packs.each do |pack| %>
      <div class="col-4 mt-5 d-flex justify-content-center">
        <div class="card text-center" style="width: 18rem;">
          <% if pack.image.attached? %>
            <img src="<%= url_for(pack.image) %>" class="card-img-top" alt="...">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= pack.product_name %></h5>
            <p class="card-text"> <%= pack.company_name %></p>
            <p class="card-text"> <%= number_to_currency(pack.price) %></p>
            <a href="/packs/<%=pack.id %>" class="btn btn-primary">상세보기</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>